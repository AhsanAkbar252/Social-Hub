
<div class="theme-layout">
  <section>
    <div class="page-header">
      <div class="header-inner">
        <h2>your Searched pages</h2>
        <nav class="breadcrumb">
          <a href="index-2.html" class="breadcrumb-item"><i class="fa fa-home"></i></a>
          <span class="breadcrumb-item active">pages</span>
        </nav>
      </div>
    </div>
  </section>
    
  <section>
    <div class="gap gray-bg">
      <div class="container-fluid">
        <div class="row">
          <div class="col-lg-12">
            <div class="row" id="page-contents">
              <div class="col-lg-3">
                <aside class="sidebar static">
                  <div class="widget">
                      <%= render 'shared/shortcuts' %>
                    </div><!-- Shortcuts -->
                  <div class="widget stick-widget">
                    <h4 class="widget-title">Profile intro</h4>
                    <ul class="short-profile">
                      <li>
                        <span>about</span>
                        <p>Hi, i am jhon kates, i am 32 years old and worked as a web developer in microsoft company. </p>
                      </li>
                      <li>
                        <span>fav tv show</span>
                        <p>Hi, i am jhon kates, i am 32 years old and worked as a web developer in microsoft company. </p>
                      </li>
                      <li>
                        <span>favourit music</span>
                        <p>Hi, i am jhon kates, i am 32 years old and worked as a web developer in microsoft company. </p>
                      </li>
                    </ul>
                  </div><!-- profile intro widget -->

                </aside>
              </div><!-- sidebar -->
              <div class="col-lg-6 middle">
                <div class="central-meta">
                  <div class="frnds">
                    <ul class="nav nav-tabs">
                       <li class="nav-item"><a class="active" href="#frends" data-toggle="tab">Joined pages</a> <span>55</span></li>
                       <li class="nav-item"><a class="" href="#frends-req" data-toggle="tab">My pages</a><span>60</span></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                      <div class="tab-pane active fade show " id="frends" >
                      <ul class="nearby-contct">
                        <% @my_pages.each do |page| %>
                          <% if page.admin_id != current_user.id %>
                            <li>
                              <div class="nearly-pepls">
                                <figure>
                                  <a href="<%= page_path(page) %>" title="">
                                    <% if page.photo.url != nil %>
                                     <%= image_tag (page.photo.url :controls =>true, style: 'display:inline') %>
                                    <% else %>
                                    <%= image_pack_tag 'media/images/resources/default_page.png'%>
                                    <% end %>
                                    </a>
                                </figure>
                                <div class="pepl-info">
                                  <h4><a href="<%= page_path(page) %>" title=""><%= page.page_name %></a></h4>
                                  <span>public page</span>
                                  <em><%= page.users.count %> Members</em>
                                  <% if !(current_user.in? page.users) %> 
                                  <%= link_to "Join Now", page_followers_path(page) ,method: :post, class: "add-butn" %>
                                  <% else %>
                                    <% page.page_followers.each do|page_user| %>
                                      <% if page_user.user == current_user %>
                                         <%= link_to "Leave page", page_follower_path(page_user) ,method: :delete, class: "add-butn" %>
                                          <% break %>
                                      <% end %>
                                    <% end %>
                                  <% end %>
                                  
                                </div>
                              </div>
                            </li>
                          <% end %>
                        <% end %>
                      </ul>
                      <div class="lodmore"><button class="btn-view btn-load-more"></button></div>
                      </div>
                      <div class="tab-pane fade" id="frends-req" >
                      <ul class="nearby-contct">
                        <% @my_pages.each do |page| %>
                          <% if page.admin_id == current_user.id %>
                            <li>
                              <div class="nearly-pepls">
                                <figure>
                                  <a href="<%= page_path(page) %>" title="">
                                    <% if page.photo.url != nil %>
                                     <%= image_tag (page.photo.url :controls =>true, style: 'display:inline') %>
                                    <% else %>
                                    <%= image_pack_tag 'media/images/resources/default_page.png'%>
                                    <% end %>
                                    </a>
                                </figure>
                                <div class="pepl-info">
                                  <h4><a href="<%= page_path(page) %>" title=""><%= page.page_name %></a></h4>
                                  <span>public page</span>
                                  <em><%= page.users.count %> Members</em>
                                  <% if !(current_user.in? page.users) %> 
                                  <%= link_to "Join Now", page_followers_path(page) ,method: :post, class: "add-butn" %>
                                  <% else %>
                                    <% page.page_followers.each do|page_user| %>
                                      <% if page_user.user == current_user %>
                                         <%= link_to "Delete page", page_path(page) ,method: :delete, class: "add-butn" %>
                                          <% break %>
                                      <% end %>
                                    <% end %>
                                  <% end %>
                                  
                                </div>
                              </div>
                            </li>
                          <% end %>
                        <% end %>
                      </ul> 
                        <button class="btn-view btn-load-more"></button>
                      </div>
                    </div>
                  </div>
                </div>  
              </div><!-- centerl meta -->
              <div class="col-lg-3">
                <aside class="sidebar static">
                  <div class="widget">
                    <%= render 'shared/following' %>
                  </div><!-- who's following -->
                  <div class="widget friend-list stick-widget">
                    <%= render 'shared/friends' %>
                  </div><!-- friends list sidebar -->               
                </aside>
              </div><!-- sidebar -->
            </div>  
          </div>
        </div>
      </div>
    </div>  
  </section>
</div>

