<div class="mb-3">
  <%= link_to new_room_path, class: 'btn btn-primary' do %>
    Create a room
  <% end %>
</div>

<% if @rooms.present? %>
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <% if current_user == room.second_person %>
        <%= link_to room.first_person.username, room_path(room), class: 'nav-link room-nav-link' %>
      <% elsif current_user == room.first_person %>
        <%= link_to room.second_person.username, room_path(room), class: 'nav-link room-nav-link' %>
      <% end %>
    <% end %>
    <%= hidden_field_tag 'room_ids', @rooms.ids %>
  </nav>
<% else %>
  <div class="text-muted">
    The are no rooms
  </div>
<% end %>















