

<div class="theme-layout">
              <div class="col-lg-12">
                <div class="central-meta">
                  <div class="messages">
                    <h5 class="f-title"><i class="ti-bell"></i>All Messages <span class="more-options"><i class="fa fa-ellipsis-h"></i></span></h5>
                    <div class="message-box">
                      <ul class="peoples" style="width: 20%;">
                        <% @rooms.each do |room| %>
                        <% if current_user == room.second_person || current_user == room.first_person %>
                            <% if current_user == room.second_person %>
                              <li onclick="location.href='<%= room_path(room) %>'">
                                <figure >        
                                  <% if room.first_person.profile != nil && room.first_person.profile.cover_photo.url != nil %>
                                    <%= image_tag room.first_person.profile.photo.url, :style=> "width:100%;" %>
                                  <% else %>
                                    <%= image_pack_tag 'media/images/resources/default_profile.png'%>
                                  <% end %>
                                </figure>
                                <!-- <span class="status f-online"></span> -->
                                <div class="people-name">
                                  <span><%= link_to room.first_person.username, room_path(room) %></span>
                                </div>
                              </li>
                            <% elsif current_user == room.first_person %>
                            <li onclick="location.href='<%= room_path(room) %>'">
                              <figure >        
                                <% if room.second_person.profile != nil && room.second_person.profile.cover_photo.url != nil %>
                                 <%= image_tag room.second_person.profile.photo.url, :style=> "width:100%;" %>
                                <% else %>
                                  <%= image_pack_tag 'media/images/resources/default_profile.png'%>
                                <% end %>
                              </figure>
                              <div class="people-name">
                                <span><%= link_to room.second_person.username, room_path(room) %></span>
                              </div>
                              <% end %>
                            </li>
                            <%= hidden_field_tag 'room_ids', @rooms.ids %>
                          <% end %> 
                        <% end %>                   
                      </ul>
                      <div class="peoples-mesg-box" style="width: 75%;">
                        <div class="alert alert-primary">
                          <h4 class="alert-heading">
                            Welcome to the Chat Station!!!
                          </h4>

                          <p class="alert alert-primary">
                            Want to talk with Friends?
                          </p>

                          <hr />

                          <p class="alert alert-primary">
                            Start Chatting now.
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>  
              </div><!-- centerl meta -->

</div>  









