<div class="theme-layout">
  
  <section>
    <%= render 'shared/toparea' %>
  </section><!-- top area -->
  <section>
    <div class="col-lg-12">
    <div class="central-meta">
      <div class="about">
        <div class="personal">
          <h5 class="f-title"><i class="ti-info-alt"></i> Personal Info</h5>
          <% if current_user == @profile.user %>
            <a class="btn btn-sm btn-primary" title="" href="<%= edit_profile_path(@profile) %>">Edit info</a>
          <% end %>
          <p>
            <%= @profile.about_me%>
          </p>
        </div>
        <div class="d-flex flex-row mt-2">
          <ul class="nav nav-tabs nav-tabs--vertical nav-tabs--left" >
            <li class="nav-item">
              <a href="#basic" class="nav-link active" data-toggle="tab" >Basic info</a>
            </li>
            <li class="nav-item">
              <a href="#education" class="nav-link" data-toggle="tab" >Education</a>
            </li>
            <li class="nav-item">
              <a href="#work" class="nav-link" data-toggle="tab" >Work</a>
            </li>
            <li class="nav-item">
              <a href="#skills" class="nav-link" data-toggle="tab"  >skills</a>
            </li>
            <li class="nav-item">
              <a href="#interest" class="nav-link" data-toggle="tab"  >interests</a>
            </li>
            <li class="nav-item">
              <a href="#lang" class="nav-link" data-toggle="tab" >languages</a>
            </li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane fade show active" id="basic" >
              <ul class="basics">
                <li><i class="fa fa-user"></i><%= @profile.f_name %> <%= @profile.l_name %></li>
                <li><i class="fa fa-map-marker"></i>live in <%= @profile.city %> <%= @profile.country %></li>
                <li><i class="fa fa-mobile"></i><%= @profile.phone_no %></li>
                <li><i class="fa fa-envelope"></i><%= @profile.email %></li>
                <li><i class="fa fa-globe"></i><%= @profile.gender %></li>
                <li><i class="fa fa-globe"></i>DOB: <%= @profile.Dob_day %> <%= @profile.Dob_month %> <%= @profile.Dob_year %></li>
                
              </ul>
            </div>
            <div class="tab-pane fade" id="education" role="tabpanel" style="    margin-left: 29px;color: #909091;font-size: 14px; margin-bottom: 0;margin-top: 20px;">
              <div>   
                <a title="" style="    color: #088dcd;margin-bottom: 5px;">Qualification</a>
                <ul class="education">
                  <li><i class="ti-facebook"></i><%= @profile.qualification %> From <%= @profile.university %>,<%= @profile.university_city %>,<%= @profile.university_country %></li>
                  <li><i class="ti-twitter"></i>Duration: From <%= @profile.university_start %> To <%= @profile.university_end %></li>
                </ul>
              </div>
            </div>
            <div class="tab-pane fade" id="work" role="tabpanel" style="    margin-left: 29px;color: #909091;font-size: 14px; margin-bottom: 0;margin-top: 20px;">
              <div>   
                <a title="">Professional Life</a>
                <ul class="education">
                  <li><i class="ti-facebook"></i>Works as <%= @profile.profession %></li>
                  <li><i class="ti-twitter"></i>At <%= @profile.workplace %>,<%= @profile.workplace_city %>,<%= @profile.workplace_country %></li>
                </ul>
              </div>
            </div>
            <div class="tab-pane fade" id="skills" role="tabpanel" style="    margin-left: 29px;color: #909091;font-size: 14px; margin-bottom: 0;margin-top: 20px;">
              <a title="" style="    color: #088dcd;margin-bottom: 5px;">Skills</a>
              <ul class="basics">
                <li><%= @profile.skills %></li>
              </ul>
            </div>
            <div class="tab-pane fade" id="interest" role="tabpanel" style="    margin-left: 29px;color: #909091;font-size: 14px; margin-bottom: 0;margin-top: 20px;">
              <a title="" style="    color: #088dcd;margin-bottom: 5px;">Interests</a>
              <ul class="basics">
                <li><%= @profile.interests %></li>
              </ul>
            </div>
            <div class="tab-pane fade" id="lang" role="tabpanel" style="    margin-left: 29px;color: #909091;font-size: 14px; margin-bottom: 0;margin-top: 20px;">
              <a title="" style="    color: #088dcd;margin-bottom: 5px;">Languages</a>
              <ul class="basics">
                <li><%= @profile.languages %></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>  
  </div><!-- centerl meta -->
  </section>
</div>
