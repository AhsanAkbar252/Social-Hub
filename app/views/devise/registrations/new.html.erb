
<div class="theme-layout">
  <div class="container-fluid pdng0">
    <div class="row merged">
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="land-featurearea" style="height: 150vh;">
          <div class="land-meta">
            <h1>Winku</h1>
            <p>
              Winku is free to use for as long as you want with two active projects.
            </p>
            <div class="friend-logo">
              <span><img src="images/wink.png" alt=""></span>
            </div>
            <a href="#" title="" class="folow-me">Follow Us on</a>
          </div>  
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div class="login-reg-bg"style="height: 150vh;">
          <div class="log-reg-area">
            <h2 class="log-title">Register</h2>
<!--               <p>
                Donâ€™t use Winku Yet? <a href="#" title="">Take the tour</a> or <a href="#" title="">Join now</a>
              </p> -->
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <div class="form-group">  
                <%= f.email_field :email,required: "required",autofocus: true,id: "input" ,input_html: { autocomplete: "email" } %> 
                <%= f.label :email, "Email", class: "control-label",for: "input" %><i class="mtrl-select"></i>
              </div>
              <div class="form-group">  
                <%= f.text_field :username,required: "required",id: "input"  %> 
                <%= f.label :username, "Username", class: "control-label",for: "input" %><i class="mtrl-select"></i>
              </div>
              <div class="form-group">  
                <%= f.password_field :password,required: "required",hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),input_html: { autocomplete: "new password" } %>
                <%= f.label :password, "Password", class: "control-label",for: "input" %><i class="mtrl-select"></i>
              </div>
              <div class="form-group">  
                <%= f.password_field :password_confirmation,required: "required",input_html: { autocomplete: "new password" } %>
                <%= f.label :password_confirmation, "Confirm Password", class: "control-label",for: "input" %><i class="mtrl-select"></i>
              </div>
              <div class="checkbox">
                <label>
                <input type="checkbox" checked="checked"/><i class="check-box"></i>Accept Terms & Conditions ?
                </label>
              </div>
              
              <div class="submit-btns">
                <button class="mtr-btn signin" type="button"><span><%= f.button :submit, "Register", class: "text-white btn btn-sm", style: "font-weight:bold;" %></span></button>
                <a href="#" title="" class="already-have">Already have an account</a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
